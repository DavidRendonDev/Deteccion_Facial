# Video Source Configuration
# Use "0" for default webcam, "1" for second camera, or path to video file
# For RTSP: "rtsp://username:password@ip:port/stream"
VIDEO_SOURCE=0

# Frame size for processing
FRAME_W=1280
FRAME_H=720

# Display window name
WINDOW_NAME=Face Pipeline

# Feature toggles
ENABLE_TRACKING=true
ENABLE_REID=true
USE_GPU=false

# Face Detection Settings (InsightFace)
DET_W=640
DET_H=640
DET_THRESH=0.6
MAX_FACES=0  # 0 = no limit

# Tracking Settings (IOU Tracker)
TRACKER_IOU_THRESH=0.3
TRACKER_MAX_MISSED=25

# Re-Identification Settings
REID_SIM_THRESH=0.45
REID_ALPHA=0.9
REID_MIN_DET_SCORE=0.65
